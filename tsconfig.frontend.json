{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "rootDir": "src",
    "outDir": "dist/frontend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "types": [],
    "verbatimModuleSyntax": true
  },
  "include": ["src/frontend/**/*", "src/core/**/*"]
}
